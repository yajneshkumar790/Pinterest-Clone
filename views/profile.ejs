<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>  
  </head>
  <body>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
      <form id="uploadform" hidden action="/fileupload" method="post">
        <input type="file" name="image">
      </form>
        <div class="profdets flex flex-col items-center mt-20">
          <div class="relative">
            <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
              <i class="text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
              <img class="w-full h-full object-cover" src="https://i.pinimg.com/236x/c0/a9/2d/c0a92dc2a60b43c4a75a37899c6d452e.jpg" alt="">
            </div>
          </div>
            <h2 class="text-3xl font-semibold mt-3"><%= user.fullname %></h2>
            <h3 class="username">@<%= user.username %></h3>
            <!-- <a href="/logout" class="logout bg-red-600 px-7 py-3 rounded-full text-s font-semibold mt-2">Logout</a> -->
            <!-- <a href="/logout" class="px-7 py-3 bg-zinc-700 rounded-full mt-3">Logout</a> -->
            <a href="/edit" class="px-7 py-3 bg-zinc-700 rounded-full mt-3">Edit</a>
            <button class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-6">Add New Post</button>
        
          <!-- <form action="/upload" method="POST" enctype="multipart/form-data">
            <input type="text" name="filecaption">
            <input type="file" name="file">
            <button type="submit">Upload</button>
          </form> -->

        </div>

        <div class="cards flex flex-wrap gap-10 px-10 mt-12">
          <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
              <img class="w-full h-full object-cover" src="https://i.pinimg.com/474x/e8/f5/26/e8f52684e54aa62a5e693fb5a651643c.jpg" alt="">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
          </div>
          <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg"></div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
          </div>
        </div>
    </div>
    
    <script>
      document.querySelector("#uploadicon").addEventListener('click', function() {
        document.querySelector("#uploadform input").click();
      })

      document.querySelector("#uploadform input").addEventListener('change', function() {
        document.querySelector("#uploadform").submit();
      });
    </script>
  </body>
</html>