<%- include("partials/header.ejs") %>

    <div class="w-full min-h-screen bg-zinc-800 px-10 text-white">
        <div class="cards flex flex-wrap gap-10">
            <% posts.forEach(function(post) { %>
                <div class="card w-32">
                    <div class="w-full h-40 bg-zinc-700 rounded-lg overflow-hidden ">
                        <img src="/images/uploads/<%= post.image %>" class="w-full h-full object-cover" alt="">
                    </div>
                    <h5 class="mt-2 text-sm"><%= post.title %></h5>
                    <h6 class="opacity-500 text-xs">@<%= post.user.username %></h6>
                </div>
            <% }); %>
            
        </div>
    </div>

<%- include("partials/footer.ejs") %>